{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "rootDirs": ["./src", "./client"],
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
  },
  "ts-node": {
      "require": ["tsconfig-paths/register"]
    },
  "include": ["src"],
  "exclude": ["node_modules"]
}